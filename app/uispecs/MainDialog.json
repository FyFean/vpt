{
  "type": "sidebar",
  "bind": "sidebar",
  "children": [
    {
      "type": "tabs",
      "children": {
        "Data": {
          "type": "panel",
          "children": [
            {
              "type": "accordion",
              "bind": "volumeLoadContainer",
              "label": "Volume"
            },
            {
              "type": "accordion",
              "label": "Environment",
              "children": [
                {
                  "type": "field",
                  "label": "File:",
                  "children": [
                    {
                      "type": "file-chooser"
                    }
                  ]
                }
              ]
            }
          ]
        },
        "Settings": {
          "type": "panel",
          "children": [
            {
              "type": "accordion",
              "label": "Renderer",
              "children": [
                {
                  "type": "field",
                  "label": "Renderer:",
                  "children": [
                    {
                      "type": "dropdown",
                      "bind": "rendererSelect",
                      "options": [
                        {
                          "value": "mip",
                          "label": "Maximum intensity projection"
                        },
                        {
                          "value": "iso",
                          "label": "Isosurface extraction"
                        },
                        {
                          "value": "eam",
                          "label": "Emission-absorption model"
                        },
                        {
                          "value": "mcs",
                          "label": "Single scattering"
                        },
                        {
                          "value": "mcm",
                          "label": "Multiple scattering"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "panel",
                  "bind": "rendererSettingsContainer"
                }
              ]
            },
            {
              "type": "accordion",
              "label": "Tone mapper",
              "children": [
                {
                  "type": "field",
                  "label": "Tone mapper:",
                  "children": [
                    {
                      "type": "dropdown",
                      "bind": "toneMapperSelect",
                      "options": [
                        {
                          "value": "range",
                          "label": "Range"
                        },
                        {
                          "value": "reinhard",
                          "label": "Reinhard"
                        },
                        {
                          "value": "artistic",
                          "label": "Artistic"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "panel",
                  "bind": "toneMapperSettingsContainer"
                }
              ]
            },
            {
              "type": "accordion",
              "label": "Context",
              "children": [
                {
                  "type": "field",
                  "label": "Resolution:",
                  "children": [
                    {
                      "type": "spinner",
                      "bind": "contextResolution",
                      "min": 1,
                      "max": 4096,
                      "value": 512
                    }
                  ]
                },
                {
                  "type": "field",
                  "label": "Scale:",
                  "children": [
                    {
                      "type": "vector",
                      "bind": "volumeScale",
                      "value": 1,
                      "step": 0.01
                    }
                  ]
                },
                {
                  "type": "field",
                  "label": "Translation:",
                  "children": [
                    {
                      "type": "vector",
                      "bind": "volumeTranslation",
                      "value": 0,
                      "min": -100,
                      "max": 100,
                      "step": 0.1
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    }
  ]
}