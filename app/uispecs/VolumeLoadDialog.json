{
  "type": "panel",
  "children": [
    {
      "type": "field",
      "label": "Type:",
      "children": [
        {
          "type": "dropdown",
          "bind": "volumeType",
          "options": [
            {
              "value": "file",
              "label": "File",
              "selected": true
            },
            {
              "value": "url",
              "label": "URL"
            },
            {
              "value": "demo",
              "label": "Demo"
            }
          ]
        }
      ]
    },
    {
      "type": "panel",
      "bind": "volumeTypeFile",
      "comment": "File upload panel",
      "visible": true,
      "children": [
        {
          "type": "field",
          "label": "File:",
          "children": [
            {
              "type": "file-chooser",
              "bind": "volumeFile"
            }
          ]
        },
        {
          "type": "panel",
          "bind": "rawSettingsPanel",
          "visible": false,
          "children": [
            {
              "type": "field",
              "label": "Dimensions:",
              "children": [
                {
                  "type": "vector",
                  "bind": "volumeDimensions",
                  "value": 128,
                  "min": 1
                }
              ]
            },
            {
              "type": "field",
              "label": "Precision:",
              "children": [
                {
                  "type": "radio",
                  "bind": "volumePrecision",
                  "options": [
                    {
                      "value": 8,
                      "label": "8-bit",
                      "selected": true
                    },
                    {
                      "value": 16,
                      "label": "16-bit"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "panel",
      "bind": "volumeTypeURL",
      "comment": "URL load panel",
      "visible": false,
      "children": [
        {
          "type": "field",
          "label": "URL:",
          "children": [
            {
              "type": "textbox",
              "bind": "volumeURL",
              "placeholder": "http://"
            }
          ]
        }
      ]
    },
    {
      "type": "panel",
      "bind": "volumeTypeDemo",
      "comment": "Demo file load panel",
      "visible": false,
      "children": [
        {
          "type": "field",
          "label": "File:",
          "children": [
            {
              "type": "dropdown",
              "bind": "volumeDemo",
              "options": [
                {
                  "value": "tooth",
                  "label": "Tooth (1.5 MB)"
                },
                {
                  "value": "frog",
                  "label": "Frog (2.8 MB)"
                },
                {
                  "value": "baby",
                  "label": "Baby (6.2 MB)"
                },
                {
                  "value": "bruce",
                  "label": "Bruce (9.8 MB)"
                },
                {
                  "value": "foot",
                  "label": "Foot (17 MB)"
                },
                {
                  "value": "skull",
                  "label": "Skull (17 MB)"
                },
                {
                  "value": "mrihead",
                  "label": "MRI Head (17 MB)"
                },
                {
                  "value": "bonsai",
                  "label": "Bonsai (46 MB)"
                },
                {
                  "value": "manix",
                  "label": "Manix (116 MB)"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "panel",
      "bind": "loadButtonAndProgress",
      "visible": false,
      "children": [
        {
          "type": "field",
          "children": [
            {
              "type": "button",
              "bind": "loadButton",
              "label": "Load"
            }
          ]
        },
        {
          "type": "field",
          "children": [
            {
              "type": "progress-bar",
              "bind": "loadProgress"
            }
          ]
        }
      ]
    }
  ]
}